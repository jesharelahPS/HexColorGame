<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HexColorGame.SettingsPage"
             BackgroundColor="#1B342E"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <ScrollView HorizontalOptions="Center">
            <VerticalStackLayout Padding="30,40" Spacing="35"
                                 HorizontalOptions="Center"
                                 WidthRequest="320">


                <Label Text="Music Settings"
                       FontSize="30"
                       FontAttributes="Bold"
                       TextColor="#DAA520"
                       FontFamily="CinzelDecorativeRegular"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10"/>

                <Grid ColumnDefinitions="*,Auto"
                      HorizontalOptions="Center"
                      WidthRequest="280"
                      Margin="0,20,0,0">
                    <Label Text="Background Music"
                           TextColor="White"
                           FontSize="22"
                           FontFamily="CinzelDecorativeRegular"
                           VerticalOptions="Center"
                           HorizontalOptions="Start" />
                    <ImageButton x:Name="BgmIconToggle"
                                 Source="blacksmith.png"
                                 BackgroundColor="Transparent"
                                 WidthRequest="15"
                                 HeightRequest="15"
                                 Clicked="OnBgmIconClicked"
                                 Grid.Column="1" Grid.Row="0"
                                 Margin="0, 0, 0, 15"/>
                </Grid>


                <Grid ColumnDefinitions="*,Auto"
                      HorizontalOptions="Center"
                      WidthRequest="280"
                      Margin="0,-20,0,0">
                    <Label Text="Sound Effects"
                           TextColor="White"
                           FontSize="22"
                           FontFamily="CinzelDecorativeRegular"
                           VerticalOptions="Center"
                           HorizontalOptions="Start" />
                    <ImageButton x:Name="SfxIconToggle"
                                 Source="blacksmith.png"
                                 BackgroundColor="Transparent"
                                 WidthRequest="15"
                                 HeightRequest="15"
                                 Clicked="OnSfxIconClicked"
                                 Grid.Column="1" Grid.Row="0"
                                 Margin="0, 0, 0, 15"/>
                </Grid>

                <Button Text="Save Settings"
                        BackgroundColor="#AD1457"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="12"
                        WidthRequest="200"
                        HorizontalOptions="Center"
                        Clicked="OnSaveClicked"
                        Margin="0,40,0,0"/>

                <Button Text="Cancel"
                        BackgroundColor="#444"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="12"
                        WidthRequest="200"
                        HorizontalOptions="Center"
                        Clicked="OnCancelClicked"
                        Margin="0,-10,0,0"/>
                
            </VerticalStackLayout>
        </ScrollView>

        <Label Text="Version 1.0.0"
               FontSize="14"
               TextColor="#888"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,10"/>
    </Grid>
</ContentPage>